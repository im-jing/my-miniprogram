.page-home {
  padding: 32rpx;
}
.section-title {
  text-align: center;
  margin-bottom: 32rpx;
}
.book-list {
  display: inline-flex;
  flex-wrap: wrap;
}
.book-item {
  width: 242rpx;
  height: 362rpx;
  position: relative;
  margin: 32rpx 50rpx;
  overflow: hidden;
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
}
.book-item image {
  width: 100%;
  height: 100%;
}
.book-content {
  position: absolute;
  left: 0;
  bottom: 0;
  background-color: #fff;
  padding: 32rpx;
  width: 100%;
}